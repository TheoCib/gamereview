header
    h1 Ajouter une review
    link(rel="stylesheet", href="/stylesheets/styles.css")

body
    form(method="POST")
        div.addform
            input(type="text", name="title", placeholder="Titre du jeu")
            input(type="number", min="0", max="10", name="grade", placeholder="Note /10")
            textarea(type="text", name="content", placeholder="Review du jeu", rows=7, cols=50)
            button(type="submit") Envoyer
a(href="/") Retour Liste

